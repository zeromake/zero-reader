.bottom_bar
    transition padding 375ms ease-in-out
    box-sizing border-box
    padding 1.2rem 2rem
    width 100%
    background-color rgba(0,0,0, 0.9)
    position absolute
    bottom 0
    left 0

.menus
    display block
    list-style none
    color #fff

.menu
    height 4rem
    text-align center
    width 25%
    display inline-block

.icon
    box-shadow 1px 1px 2px #aaaaaa;
    padding .5rem
    width 2.5rem
    height 2.5rem

@media screen and (max-width: 640px)
    .bottom_bar
        padding .5rem .2rem
