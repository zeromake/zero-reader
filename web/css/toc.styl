item_offset = 1.8rem

white_rgba(alpha)
    rgba(255, 255, 255, alpha)

black_rgba(alpha)
    rgba(0, 0, 0, alpha)

.tocView > .tocItem
    // border-top 1px solid #cfd8dc
    margin-left item_offset

.tocItem
    padding 6px 6px
    position relative


.tocItemToggler
    font-size 1.4rem
    color white_rgba(.6)
    // float left
    position absolute
    text-align center
    left -1.0rem

.theme_white .tocItemToggler
    color black_rgba(.5)

.tocItemToggler.none ~ .tocItems
    display none

.tocItem > .tocItems
    margin-left item_offset

// .tocItem > a

.theme_white .tocItem > a
    color black_rgba(.8)

.tocItemToggler:hover ~ .tocItems, .tocItem > a:hover, .tocItemToggler:hover + a
    background-color white_rgba(.02)
    background-image linear-gradient(white_rgba(.05), white_rgba(0))
    background-clip padding-box
    box-shadow 0 1px 0 white_rgba(.05) inset, 0 0 1px white_rgba(.2) inset, 0 0 1px black_rgba(.2)
    color white_rgba(.9)

.theme_white .tocItemToggler:hover ~ .tocItems, .theme_white .tocItem > a:hover, .theme_white .tocItemToggler:hover + a
    background-color black_rgba(.02)
    background-image linear-gradient(black_rgba(.05), black_rgba(0))
    box-shadow 0 1px 0 black_rgba(.05) inset, 0 0 1px black_rgba(.2) inset, 0 0 1px white_rgba(.2)
    color black_rgba(.9)

.tocView
    background-color black_rgba(.1)

.theme_white.tocView
    background-color white_rgba(.1)

.toc_text
    cursor pointer
    text-decoration none
    display inline-block
    min-width 95%
    min-width calc(100% - 4px)
    height auto
    margin-bottom 1px
    border-radius 2px
    color white_rgba(.8)
    font-size 1.2rem
    line-height 1.2rem
    white-space normal
    padding 4px 2px

.icon
    width 1.8rem
    height 1.8rem
