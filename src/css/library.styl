
.library
    position absolute
    top 0
    left 0
    width 100%
    height 100%
    overflow auto

.center_book
    width 11rem
    height 18rem
    float left
    margin 2rem 3.2rem 0

.book_image
    height 15.5rem
    box-shadow 0 8px 8px 0 hsla(0,0%,100%,.1)
    border 2px solid #ccc

.book_image:hover
    border-color #1ec3d8

.book_image > img
    width 100%
    height 100%
.book_title
    display block
    padding-left 1rem
    padding-right 1rem
    margin-top 1rem
    overflow hidden
    text-overflow ellipsis
    white-space nowrap