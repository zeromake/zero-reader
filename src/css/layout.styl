
.toc_layout
    position absolute
    top 1%
    left 15%
    width 70%
    height 96%
    box-shadow 2px 2px 8px rgba(0,0,0,.2)
    z-index 10
    background-color #404040

@media screen and (max-width: 700px)
    .toc_layout
        left 10%
        width 80%

.toc_content
    position absolute
    top 2.5rem
    right 1rem
    bottom 1rem
    left 1rem
    overflow-y auto
    -webkit-overflow-scrolling touch
    // top 30
    // position absolute
    // overflow-y auto

.toc_title
    border-bottom 1px solid #cbcbcb
    padding 0 1.15rem
    height 2.5rem
    width 100%
    box-sizing border-box

.toc_title p
    display inline-block
    color #FFF
    height 100% 
    text-align center
    float left
    font-size 1.25rem
    line-height 2.5rem
.toc_close
    float right
    margin-top 0.4rem
    display inline-block
    color rgba(255, 255, 255, 0.87)
    fill currentcolor
    height 1.7rem
    width 1.7rem
    box-sizing border-box


.body
    width 100%
    height 100%

.content
    width 100%
    height 100%

.is_scroll
    overflow auto
    -webkit-overflow-scrolling touch

.animate_content
    position absolute
    top 0
    left 0
    width 100%
    height 100%



.theme_white.book_layout
    background-color #FFF

.pageHtml
    box-shadow inset 1px 0 0 hsla(0,0%,100%,.05)

.view
    position relative
    margin 0 auto
