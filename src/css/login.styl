.content
    width 100%
    height 100%
    overflow hidden
    display flex
    justify-content center
    align-items center
    position absolute
    top 0
    left 0
    background linear-gradient(
            45deg,
            #cd6e0a 0%,
            rgba(205, 110, 10, 0) 70%
        ),
        linear-gradient(
            135deg,
            #6bcd0a 10%,
            rgba(107, 205, 10, 0) 80%
        ),
        linear-gradient(
            225deg,
            #07e9e1 10%,
            rgba(7, 233, 225, 0) 80%
        ),
        linear-gradient(
            315deg,
            #e6058c 100%,
            rgba(230, 5, 140, 0) 70%
        )

.title
    display flex
    justify-content center
    align-items center
    
.form_item
    text-align center
    box-sizing border-box
    width 100%
    padding .5rem 0

.form
    overflow hidden
    background-color rgba(255, 255, 255, .5)
    border 1px solid transparent
    border-radius 4px
    box-shadow 0 1px 1px rgba(0, 0, 0, .5)
    padding 1.5rem 2rem
    width 20rem
    max-width 25rem
    min-width 15rem
.button_void
    width 2%
    display inline-block
.button_item
    display inline-block
    box-sizing border-box
    width 49%

.button
    padding .5rem
    width 100%
    font-size 1rem
.input
    width 100%
    font-size 1rem
    height 2.3rem
.verify_input
    display inline-block
    width 60%
.verify_img
    display inline-block
    width 40%

.form_item_back
    overflow hidden
    padding-top 0.5rem
    padding-bottom 0.5rem
.rememberme
    float left
    position relative

.rememberme_check
    position absolute
    top 3px
    left 5px
    display inline-block
    width auto

.rememberme_label
    user-select none
    padding-left 1.4rem
    font-weight normal
    display inline-block
    cursor pointer

.back
    float right
