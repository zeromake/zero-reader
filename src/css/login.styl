.content
    width 100%
    height 100%
    overflow hidden
    display flex
    justify-content center
    align-items center
.title
    display flex
    justify-content center
    align-items center
    
.form_item
    text-align center
    box-sizing border-box
    width 100%
    padding .5rem 0

.form
    overflow hidden
    background-color rgba(255, 255, 255, .5)
    border 1px solid transparent
    border-radius 4px
    box-shadow 0 1px 1px rgba(0, 0, 0, .5)
    padding 1.5rem 2rem
    width 20rem
    max-width 25rem
    min-width 15rem
.button_void
    width 2%
    display inline-block
.button_item
    display inline-block
    box-sizing border-box
    width 49%

.button
    padding .5rem
    width 100%
    font-size 1rem
.input
    width 100%
    font-size 1rem
    height 2.3rem
.verify_input
    display inline-block
    width 60%
.verify_img
    display inline-block
    width 40%