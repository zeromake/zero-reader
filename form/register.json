{
  "account": {
    "type": "text",
    "pattern": "[A-z0-9_\\-]+",
    "title": "英文,数字,_ 且在4-32长度之间!",
    "minlength": 4,
    "maxlength": 32,
    "required": true,
    "placeholder": "用户"
  },
  "password": {
    "type": "password",
    "pattern": ".+",
    "title": "任意字符且在8-32长度之间!",
    "minlength": 4,
    "maxlength": 32,
    "required": true,
    "placeholder": "密码"
  },
  "re_password": {
    "type": "password",
    "equal": "password",
    "title": "必须与上面的密码相同!",
    "required": true,
    "sort": 2,
    "placeholder": "确认密码"
  },
  "role_name": {
    "type": "text",
    "pattern": ".{3,16}",
    "minlength": 3,
    "maxlength": 32,
    "title": "任意字符且在3-32长度之间!",
    "required": true,
    "placeholder": "昵称"
  },
  "code": {
    "type": "text",
    "pattern": "\\w+",
    "minlength": 6,
    "maxlength": 6,
    "title": "任意字符且长度为6!",
    "required": "$sign_up_code",
    "placeholder": "邀请码"
  },
  "email": {
    "type": "email",
    "pattern": "^[A-Za-z0-9\\u4e00-\\u9fa5]+@[a-zA-Z0-9_-]+(\\.[a-zA-Z0-9_-]+)+$",
    "required": true,
    "title": "请输入正确的邮箱格式",
    "placeholder": "邮箱"
  }
}
